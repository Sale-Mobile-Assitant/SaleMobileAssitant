<UserControl x:Class="SalesMMobileAssitant.UserControls.UserControlRoutePlan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalesMMobileAssitant.UserControls"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid>
        <StackPanel Orientation="Vertical">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="15,20">
                    <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}" FontSize="14" materialDesign:HintAssist.Hint="Month">
                        <ComboBoxItem Content="January"/>
                        <ComboBoxItem Content="February"/>
                        <ComboBoxItem Content="March"/>
                        <ComboBoxItem Content="April"/>
                        <ComboBoxItem Content="May"/>
                        <ComboBoxItem Content="June"/>
                        <ComboBoxItem Content="July"/>
                        <ComboBoxItem Content="August"/>
                        <ComboBoxItem Content="September"/>
                        <ComboBoxItem Content="October"/>
                        <ComboBoxItem Content="November"/>
                        <ComboBoxItem Content="December"/>
                    </ComboBox>
                    <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}" FontSize="14" materialDesign:HintAssist.Hint="Year" Margin="25 0">
                        <ComboBoxItem Content="2011"/>
                        <ComboBoxItem Content="2013"/>
                        <ComboBoxItem Content="2014"/>
                        <ComboBoxItem Content="2015"/>
                        <ComboBoxItem Content="2016"/>
                        <ComboBoxItem Content="2017"/>
                        <ComboBoxItem Content="2018"/>
                        <ComboBoxItem Content="2019"/>
                        <ComboBoxItem Content="2020"/>
                    </ComboBox>
                </StackPanel>
                <Button Visibility="Hidden" Style="{StaticResource MaterialDesignRaisedDarkButton}" Command="{Binding NewRoutePlancommand}" VerticalAlignment="Center" Content="New Route Plan" HorizontalAlignment="Right" Width="150" ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" Margin="15,20"/>
            </Grid>

            <Grid Height="595" >
                <Rectangle Margin="10 0 10 0" Height="auto" Fill="White">
                    <Rectangle.Effect>
                        <DropShadowEffect BlurRadius="30" Color="#FFDEDEDE" RenderingBias="Quality" ShadowDepth="2"/>
                    </Rectangle.Effect>
                </Rectangle>
                <ListView x:Name="ListViewRoutePlan" ItemsSource="{Binding RoutePlanResources}"  Padding="10 30"  Margin="10 0" FontSize="14">
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}},Converter={StaticResource IndexConverter}}" Header="STT" Width="60" />
                            <GridViewColumn DisplayMemberBinding="{Binding EmployeesName}" Header="Emloyees Name" />
                            <GridViewColumn DisplayMemberBinding="{Binding CustomerName}" Header="Customer Name" />
                            <GridViewColumn DisplayMemberBinding="{Binding DataPlan}" Header="Date Plan" />
                            <GridViewColumn DisplayMemberBinding="{Binding Address}" Header="Address" />
                            <GridViewColumn Header="Plan Status">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="5" Style="{StaticResource BorderTextBlockCricleColorOnStatus}">
                                            <TextBlock x:Name="TextBlockStatus" Text="{Binding PlanStatus}"  Padding="10 3 10 3" FontWeight="Medium" Style="{StaticResource TextBlockForegroundOnStatus}"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Actions">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <materialDesign:PopupBox  PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" VerticalAlignment="Center" Margin="15 0 0 0" HorizontalAlignment="Center">
                                            <materialDesign:PopupBox.ToggleContent>
                                                <materialDesign:PackIcon Kind="DotsHorizontal"/>
                                            </materialDesign:PopupBox.ToggleContent>
                                            <StackPanel Width="100">
                                                <Button Command="{Binding ElementName=ListViewRoutePlan,Path=DataContext.EditCommand}" CommandParameter="{Binding}" Content="Edit" Foreground="Blue"/>
                                                <Button Command="{Binding ElementName=ListViewRoutePlan,Path=DataContext.EditCommand}" CommandParameter="{Binding}" Content="Delete" Foreground="Red"/>
                                            </StackPanel>
                                        </materialDesign:PopupBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
            <Button Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}" CommandTarget="{Binding ElementName=dialog}" Style="{StaticResource MaterialDesignRaisedDarkButton}" VerticalAlignment="Center" Content="Add Route" HorizontalAlignment="Right" Width="100" ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" Margin="15,20"/>
        </StackPanel>

        <materialDesign:DialogHost DialogMargin="10" IsOpen="{Binding IsDialogOpen}" x:Name="dialog">
            <materialDesign:DialogHost.DialogContent>
                <Grid Margin="16" Width="500">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Edit" Style="{StaticResource MaterialDesignTitleTextBlock}"/>
                    <TextBox Grid.Row="1" Text="{Binding EmployeesName}" Margin="0 10" materialDesign:HintAssist.Hint="Employees Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    <TextBox Grid.Row="2" Text="{Binding CustomerName}" Margin="0 10" materialDesign:HintAssist.Hint="Customer Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    <DatePicker Grid.Row="3" Margin="0 10" materialDesign:HintAssist.Hint="Pick Date" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                    <TextBox Grid.Row="4" Text="{Binding Address}" Margin="0 10" materialDesign:HintAssist.Hint="Address" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    <ComboBox Grid.Row="5" SelectedItem="{Binding selectedItems}" Margin="0 10" materialDesign:HintAssist.Hint="OS" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                        <ComboBoxItem>
                            Android
                        </ComboBoxItem>
                        <ComboBoxItem>
                            iOS
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Linux
                        </ComboBoxItem>
                        <ComboBoxItem>
                            Windows
                        </ComboBoxItem>
                    </ComboBox>
                    <StackPanel Grid.Row="6" Orientation="Horizontal" FlowDirection="RightToLeft" Margin="10">
                        <Button Content="Cancel" Margin="10 0" Width="100" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}"/>
                        <Button Content="Save"  Width="100" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}"/>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
        
    </Grid>




</UserControl>
